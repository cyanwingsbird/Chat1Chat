<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/simple_profile_icon_width"
        android:layout_height="@dimen/simple_profile_icon_height"
        android:contentDescription="personal icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_account_circle_50dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/profile_pic"
        android:layout_marginLeft="5dp"
        android:text="name"
        android:textSize="@dimen/simple_text_size_large"
        android:textColor="@color/Black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acceptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_pic"
        android:layout_marginLeft="5dp"
        android:text="Click to accept"
        android:layout_below="@+id/name"
        android:textSize="@dimen/simple_text_size_small"
        android:textColor="@color/Black"
        android:textStyle="bold" />

</RelativeLayout>